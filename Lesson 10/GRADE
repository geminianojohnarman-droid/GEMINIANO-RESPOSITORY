# self = 'this' / 'this' student
# __init__ = Initialize
# static method
# all methods are functions, but not all functions are methods

class Student:
    DEFAULT_SUBJECT = ["Mathematics in the Modern World", "Electronics"]

    def __init__(self, name, grade, subject):
        self.name = name
        self.grade = grade
        self.subject = subject

    def print_student_info_method(self):
        print(f"name: {self.name} grade: {self.grade} course: {self.subject}")

    @classmethod
    def create_default_student(cls, name, grade):
        print(f"name: {name} grade: {grade} course: {cls.DEFAULT_SUBJECT}")
        return cls(name, grade, cls.DEFAULT_SUBJECT)

    @staticmethod
    def Is_GradePassing(grade):
        return grade <= 3.00


if __name__ == "__main__":
    student1 = Student("Ivan", 1.00, ["Acting", "Music Writing"])
    student1.print_student_info_method()
    if Student.Is_GradePassing(student1.grade):
        print("PASSED")
    else:
        print("FAILED")


    student2 = Student.create_default_student("Acorn", 5.00)
    if Student.Is_GradePassing(student2.grade):
        print("PASSED")
    else:
        print("FAILED")

'''''
