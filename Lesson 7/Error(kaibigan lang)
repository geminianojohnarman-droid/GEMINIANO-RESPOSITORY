import tkinter as tk
from tkinter import messagebox
# Removed 'import time' and 'import threading' as they are not needed for sequential blocking alerts

# The sequence of error notices to be displayed
ERROR_SEQUENCE = [
    ("FATAL ERROR: Initialization Failure",
     "Module 'NetCore.dll' failed to load. (Error 0x80070002)\n\nClick OK to proceed to the next alert."),
    ("DATA CORRUPTION WARNING",
     "Disk write cache failed. Possible loss of unsaved data.\n\nClick OK to proceed to the next alert."),
    ("SECURITY ALERT",
     "Unauthorized access detected on port 22. Connection terminated.\n\nClick OK to proceed to the next alert."),
    ("SYSTEM ERROR", "Critical memory resources exhausted. Shut down your device."),
    ("FILE CORRUPTED", "WARNING: Multiple files are found corrupted during this process. \n\nClick OK to proceed to the next alert"),
("FATAL ERROR: Initialization Failure",
     "Module 'NetCore.dll' failed to load. (Error 0x80070002)\n\nClick OK to proceed to the next alert."),
    ("DATA CORRUPTION WARNING",
     "Disk write cache failed. Possible loss of unsaved data.\n\nClick OK to proceed to the next alert."),
    ("SECURITY ALERT",
